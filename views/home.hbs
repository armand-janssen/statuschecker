<h1 class="text-red-800 text-5xl mb-3">Status Checker Jobs</h1>


<!-- component -->
<div class="md:px-32 py-8 w-full">
  <div class="shadow overflow-hidden rounded border-b border-gray-200">
    <table class="min-w-full bg-white">
      <thead class="bg-gray-800 text-white">
        <tr>
          <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">id</th>
          <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">URL</th>
          <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Last check</th>
          <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Failing Since</th>
        </tr>
      </thead>
      <tbody class="text-gray-700">
        {{#each jobs}}
        <tr class="{{bgColorStriped @index}}">
          <td class=" w-1/3 text-left py-3 px-4 text-blue-800">
            <a class="text-blue-600 visited:text-purple-600" href="/jobs/{{this.id}}">{{this.id}}</a>
          </td>
          <td class="w-1/3 text-left py-3 px-4">{{this.name}}</td>
          <td class="text-left py-3 px-4">
            <a class="hover:text-blue-500" href="{{this.url}}">{{this.url}}</a>
          </td>
          <td class="text-left py-3 px-4">
            {{#if this.lastcheck}}
            {{{dateFormat this.lastcheck "dddd DD-MM-YYYY HH:mm:ss"}}}
            {{else}}
            n/a
            {{/if}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>